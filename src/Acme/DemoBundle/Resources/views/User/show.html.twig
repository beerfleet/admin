{% extends 'jvbAdminBundle::base.html.twig' %}

{% block body -%}
  <div class="container">
    <h1>User</h1>

    <table class="table table-bordered table-striped record_properties">
      <tbody>
        <tr>
          <th>Id</th>
          <td>{{ entity.id }}</td>
        </tr>
        <tr>
          <th>Firstname</th>
          <td>{{ entity.firstname }}</td>
        </tr>
        <tr>
          <th>Lastname</th>
          <td>{{ entity.lastname }}</td>
        </tr>
      </tbody>
    </table>

    <ul class="record_actions">
      <li>
        <a class="btn btn-default" href="{{ path('user') }}">
          Back to the list
        </a>
      </li>
      <li>
        <a class="btn btn-default" href="{{ path('user_edit', { 'id': entity.id }) }}">
          Edit
        </a>
      </li>
      <li>{{ form(delete_form) }}</li>
    </ul>
  </div>
{% endblock %}
